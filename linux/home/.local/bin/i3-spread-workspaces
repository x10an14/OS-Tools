#!/usr/bin/env bash

if [ "$(xrandr | grep -E '^DVI-I-' | grep -c ' connected')" == "2" ]; then
    echo "Screens detected:"
    ~/.screenlayout/dbd_docking_station.sh
fi

if pgrep i3; then 
    i3-msg workspace "10" && i3-move-current-workspace right
    i3-msg workspace "3: SSH" && i3-move-current-workspace right
    i3-msg workspace "8: Chats" && i3-move-current-workspace right
    i3-msg workspace 1
fi
